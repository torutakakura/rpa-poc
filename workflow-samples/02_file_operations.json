{
  "name": "ファイル操作の自動化",
  "description": "フォルダの作成、ファイルのコピー、リネーム",
  "version": "1.0.0",
  "steps": [
    {
      "id": "step-001",
      "category": "I_ファイル・フォルダ",
      "operation": "フォルダ作成",
      "params": {
        "folder_path": "C:/temp/rpa_test"
      },
      "description": "テスト用フォルダを作成"
    },
    {
      "id": "step-002",
      "category": "I_ファイル・フォルダ",
      "operation": "ファイル書き込み",
      "params": {
        "file_path": "C:/temp/rpa_test/test.txt",
        "content": "RPAテストファイル\n作成日時: ${timestamp}"
      },
      "description": "テキストファイルを作成"
    },
    {
      "id": "step-003",
      "category": "B_待機・終了・エラー",
      "operation": "待機",
      "params": {
        "seconds": 1
      },
      "description": "1秒待機"
    },
    {
      "id": "step-004",
      "category": "I_ファイル・フォルダ",
      "operation": "ファイル・フォルダコピー",
      "params": {
        "source_path": "C:/temp/rpa_test/test.txt",
        "destination_path": "C:/temp/rpa_test/test_copy.txt"
      },
      "description": "ファイルをコピー"
    },
    {
      "id": "step-005",
      "category": "I_ファイル・フォルダ",
      "operation": "ファイル・フォルダリネーム",
      "params": {
        "old_path": "C:/temp/rpa_test/test_copy.txt",
        "new_path": "C:/temp/rpa_test/backup.txt"
      },
      "description": "ファイル名を変更"
    },
    {
      "id": "step-006",
      "category": "I_ファイル・フォルダ",
      "operation": "ファイル一覧取得",
      "params": {
        "folder_path": "C:/temp/rpa_test"
      },
      "description": "フォルダ内のファイル一覧を取得"
    }
  ]
}